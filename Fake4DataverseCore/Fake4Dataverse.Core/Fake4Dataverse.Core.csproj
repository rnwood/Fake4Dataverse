    <EmbeddedResource Include="..\system-edm-files\Privilege.cdm.json" Link="Metadata\Cdm\SystemEntities\Privilege.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\RolePrivileges.cdm.json" Link="Metadata\Cdm\SystemEntities\RolePrivileges.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\Organization.cdm.json" Link="Metadata\Cdm\SystemEntities\Organization.cdm.json" />
