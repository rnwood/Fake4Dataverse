    <EmbeddedResource Include="..\system-edm-files\ComponentDefinition.cdm.json" Link="Metadata\Cdm\SystemEntities\ComponentDefinition.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\AppModule.cdm.json" Link="Metadata\Cdm\SystemEntities\AppModule.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\SiteMap.cdm.json" Link="Metadata\Cdm\SystemEntities\SiteMap.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\SavedQuery.cdm.json" Link="Metadata\Cdm\SystemEntities\SavedQuery.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\SystemForm.cdm.json" Link="Metadata\Cdm\SystemEntities\SystemForm.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\WebResource.cdm.json" Link="Metadata\Cdm\SystemEntities\WebResource.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\AppModuleComponent.cdm.json" Link="Metadata\Cdm\SystemEntities\AppModuleComponent.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\EntityDefinition.cdm.json" Link="Metadata\Cdm\SystemEntities\EntityDefinition.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\Attribute.cdm.json" Link="Metadata\Cdm\SystemEntities\Attribute.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\RelationshipDefinition.cdm.json" Link="Metadata\Cdm\SystemEntities\RelationshipDefinition.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\OptionSetDefinition.cdm.json" Link="Metadata\Cdm\SystemEntities\OptionSetDefinition.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\EntityKeyDefinition.cdm.json" Link="Metadata\Cdm\SystemEntities\EntityKeyDefinition.cdm.json" />
    <!-- Security model entities -->
    <EmbeddedResource Include="..\system-edm-files\SystemUser.cdm.json" Link="Metadata\Cdm\SystemEntities\SystemUser.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\SystemUserRoles.cdm.json" Link="Metadata\Cdm\SystemEntities\SystemUserRoles.cdm.json" />
    <EmbeddedResource Include="..\system-edm-files\BusinessUnit.cdm.json" Link="Metadata\Cdm\SystemEntities\BusinessUnit.cdm.json" />
